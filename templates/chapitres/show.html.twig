{% extends 'base.html.twig' %}

{% block title %}Détail chapitre{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">📄 Détail du chapitre</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ chapitre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ chapitre.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ chapitre.contenu }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ chapitre.urlFichier }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ chapitre.formatFichier }}</td>
            </tr>
            <tr>
                <th>Ressource</th>
                <td>{{ chapitre.idRessources.titre }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3 d-flex gap-2">
        <a href="{{ path('app_chapitres_edit', {'id': chapitre.id}) }}" class="btn btn-warning">
            ✏️ Modifier
        </a>

        {{ include('chapitres/_delete_form.html.twig') }}

        <a href="{{ path('app_ressources_new') }}" class="btn btn-outline-secondary">
            ← Ajouter une ressource
        </a>
    </div>
</div>
{% endblock %}
