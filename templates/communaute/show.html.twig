{% extends 'base.html.twig' %}

{% block title %}Community: {{ communaute.nom }}{% endblock %}

{% block body %}

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Community Info Sidebar -->
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="h4 mb-0">{{ communaute.nom }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5>Description</h5>
                            <p>{{ communaute.description }}</p>
                        </div>

                        <div class="mb-4">
                            <h5>Details</h5>
                            <ul class="list-unstyled">
                                <li><strong>Created:</strong> {{ communaute.date_creation|date('Y-m-d H:i:s') }}</li>
                                <li><strong>Hackathon ID:</strong> {{ communaute.id_hackathon }}</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_communaute_edit', {'id': communaute.id}) }}" class="btn btn-warning">Edit</a>
                            <form method="post" action="{{ path('app_communaute_delete', {'id': communaute.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this community?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ communaute.id) }}">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4 class="h5 mb-0">Available Chats</h4>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for chat in communaute.chats %}
                            <a href="#chat-{{ chat.id }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                {{ chat.nom }}
                                <span class="badge bg-primary rounded-pill">{{ chat.type }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>

                <div class="mt-3">
                    <a href="{{ path('app_communaute_index') }}" class="btn btn-secondary w-100">Back to Communities</a>
                </div>
            </div>

            <!-- Chat Messages Area -->
            <div class="col-md-9">
                <div class="chat-container">
                    {% for chat in communaute.chats %}
                        <div id="chat-{{ chat.id }}" class="card mb-4">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">{{ chat.nom }}</h4>
                                <div>
                                    <span class="badge bg-light text-primary me-2">{{ chat.type }}</span>
                                    <a href="{{ path('app_chat_show', {'id': chat.id}) }}" class="btn btn-sm btn-light">
                                        <i class="fas fa-expand"></i> Expand
                                    </a>
                                </div>
                            </div>
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <div class="messages">
                                    {% if chat.messages is defined %}
                                        {% for message in chat.messages %}
                                            <div class="message mb-3">
                                                <div class="d-flex align-items-start">
                                                    <div class="message-content bg-light p-3 rounded">
                                                        <div class="message-header mb-2">
                                                            <strong>{{ message.posted_by.nom }} {{ message.posted_by.prenom }}</strong>
                                                            <small class="text-muted">{{ message.post_time|date('Y-m-d H:i') }}</small>
                                                        </div>
                                                        <p class="mb-1">{{ message.contenu }}</p>
                                                        <small class="text-muted">{{ message.type }}</small>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            <p class="text-center text-muted">No messages yet in this chat.</p>
                                        {% endfor %}
                                    {% else %}
                                        <p class="text-center text-muted">No messages yet in this chat.</p>
                                    {% endif %}
                                </div>

                                <!-- Message Input Form -->
                                <form method="post" action="{{ path('app_chat_message_new', {'id': chat.id}) }}" class="mt-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="contenu" placeholder="Type your message..." required>
                                        <select class="form-select" name="type" style="max-width: 150px;">
                                            <option value="QUESTION">Question</option>
                                            <option value="REPONSE">Response</option>
                                            <option value="SUGGESTION">Suggestion</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary">Send</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <style>
        .message-content {
            max-width: 75%;
            display: inline-block;
        }
        .messages {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .chat-container {
            height: calc(100vh - 100px);
            overflow-y: auto;
        }
    </style>
{% endblock %} 