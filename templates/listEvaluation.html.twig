{% extends 'base.html.twig' %}

{% block title %}Evaluations List
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="mb-4 text-center">Evaluations List</h2>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		<div class="table-responsive shadow-sm rounded-4 border">
			<table class="table table-hover align-middle mb-4">
				<thead class="table-light">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Jury</th>
						<th scope="col">Hackathon</th>
						<th scope="col">Project</th>
						<th scope="col">Tech Note</th>
						<th scope="col">Innovation Note</th>
						<th scope="col">Date</th>
						<th scope="col">Votes</th>
						<!-- New column for displaying votes -->
						<th scope="col" class="text-center">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for evaluation in evaluations %}
						<tr>
							<th scope="row">{{ evaluation.id }}</th>
							<td>{{ evaluation.idJury }}</td>
							<td>{{ evaluation.idHackathon }}</td>
							<td>{{ evaluation.idProjet }}</td>
							<td>{{ evaluation.NoteTech }}</td>
							<td>{{ evaluation.NoteInnov }}</td>
							<td>{{ evaluation.date|date('Y-m-d') }}</td>
							<td>
								<ul>
									{% for vote in evaluation.getVotes() %}
										<li>Vote ID:
											{{ vote.id }}
											- Value:
											{{ vote.valeurVote }}</li>
									{% else %}
										<li>No votes for this evaluation.</li>
									{% endfor %}
								</ul>
							</td>
							<td class="text-center">
								<a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}" class="btn btn-sm btn-outline-primary me-1">Edit</a>
								<a href="{{ path('evaluation_delete', {'id': evaluation.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this evaluation?')">Delete</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8" class="text-center text-muted">No evaluations found.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<div class="d-grid">
			<a href="{{ path('evaluation_add') }}" class="btn btn-success btn-lg mt-3">âž• Add New Evaluation</a>
		</div>
	</div>
{% endblock %}
