{% extends 'base.html.twig' %}

{% block title %}Edit Hackathon{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Hackathon</h1>

        <form method="post" class="mt-4">
            <div class="form-group">
                <label for="id_organisateur">Organizer ID</label>
                <input type="number" class="form-control" id="id_organisateur" name="id_organisateur" value="{{ hackathon.id_organisateur }}" required>
            </div>

            <div class="form-group">
                <label for="nom_hackathon">Hackathon Name</label>
                <input type="text" class="form-control" id="nom_hackathon" name="nom_hackathon" value="{{ hackathon.nom_hackathon }}" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required>{{ hackathon.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="date_debut">Start Date</label>
                <input type="datetime-local" class="form-control" id="date_debut" name="date_debut" value="{{ hackathon.date_debut|date('Y-m-d\\TH:i') }}" required>
            </div>

            <div class="form-group">
                <label for="date_fin">End Date</label>
                <input type="datetime-local" class="form-control" id="date_fin" name="date_fin" value="{{ hackathon.date_fin|date('Y-m-d\\TH:i') }}" required>
            </div>

            <div class="form-group">
                <label for="lieu">Location</label>
                <input type="text" class="form-control" id="lieu" name="lieu" value="{{ hackathon.lieu }}" required>
            </div>

            <div class="form-group">
                <label for="theme">Theme</label>
                <input type="text" class="form-control" id="theme" name="theme" value="{{ hackathon.theme }}" required>
            </div>

            <div class="form-group">
                <label for="conditions_participation">Participation Conditions</label>
                <textarea class="form-control" id="conditions_participation" name="conditions_participation" rows="3" required>{{ hackathon.conditions_participation }}</textarea>
            </div>

            <button type="submit" class="btn btn-primary">Update Hackathon</button>
            <a href="{{ path('app_hackathon_index') }}" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
{% endblock %} 