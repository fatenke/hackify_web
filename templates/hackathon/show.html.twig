{% extends 'base.html.twig' %}

{% block title %}Hackathon Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ hackathon.nom_hackathon }}</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Details</h5>
                <p class="card-text">{{ hackathon.description }}</p>
                <p class="card-text">
                    <strong>Dates:</strong> {{ hackathon.date_debut|date('Y-m-d H:i') }} to {{ hackathon.date_fin|date('Y-m-d H:i') }}<br>
                    <strong>Location:</strong> {{ hackathon.lieu }}<br>
                    <strong>Theme:</strong> {{ hackathon.theme }}<br>
                    <strong>Organizer ID:</strong> {{ hackathon.id_organisateur }}
                </p>
                <h6 class="mt-3">Participation Conditions</h6>
                <p class="card-text">{{ hackathon.conditions_participation }}</p>
            </div>
        </div>

        <div class="btn-group">
            <a href="{{ path('app_hackathon_edit', {'id': hackathon.id_hackathon}) }}" class="btn btn-warning">Edit</a>
            <form method="post" action="{{ path('app_hackathon_delete', {'id': hackathon.id_hackathon}) }}" style="display: inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hackathon.id_hackathon) }}">
                <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this hackathon?')">Delete</button>
            </form>
            <a href="{{ path('app_hackathon_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %} 