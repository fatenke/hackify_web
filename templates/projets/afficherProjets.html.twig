{% extends 'base.html.twig' %}

{% block title %}Projets - {{ hackathon.nom_hackathon }}{% endblock %}

{% block body %}
<div class="container mt-5">
  <h2>Projets au hackathon : {{ hackathon.nom_hackathon }}</h2>
  
  {% if projets is empty %}
    <p>Aucun Projets pour le moment.</p>
  {% else %}
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Statut</th>
          <th>Priorite</th>
          <th>Description</th>
          <th>Ressource</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        {% for projet in projets %}
          <tr>
       
            <td>{{ projet.nom }}</td>
            <td>{{ projet.statut }}</td>
            <td>{{ projet.priorite }}</td>
            <td>{{ projet.description }}</td>
            <td>{{ projet.ressource }}</td>
              <td>
<a href="{{ path('modifier_projet_front', { id: projet.id }) }}" style="background-color:blue"class="btn bg-gradient-primary  w-30 m-2 me-2">Update</a>

              <form method="post" action="{{ path('supprimer_projet_front', {id: projet.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="w-50 m-2">
        <input type="hidden" name="_token" value="{{ csrf_token('supprimerfront' ~ projet.id) }}">
              <button class="btn btn-danger" > Delete </button>
    </form>
    
              </td>
          
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
</div>
{% endblock %}
