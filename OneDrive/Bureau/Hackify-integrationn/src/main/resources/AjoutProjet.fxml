<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1080.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AjouterProjet">
   <HBox style="-fx-spacing: 20;">
      <VBox minWidth="200">
         <fx:include source="NavBar.fxml" />
      </VBox>
      <VBox alignment="TOP_CENTER" prefWidth="960.0" spacing="30.0" style="-fx-padding: 20px;">
         <Label text="Ajoutez un nouveau projet !" textFill="#1e0425">
            <font><Font size="36.0" /></font>
         </Label>
         <VBox prefWidth="700.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px;">
            <!-- Nom -->
            <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
               <Label text="Nom" textFill="#82e9f1">
                  <font><Font size="18.0" /></font>
               </Label>
               <HBox spacing="10.0">
                  <TextField fx:id="a1" prefWidth="200.0" promptText="nom" style="-fx-background-radius: 5px;" />
                  <Button fx:id="listenNom" onAction="#handleVoiceInputNom" styleClass="speak-button" text="Speak" />
               </HBox>
               <Label fx:id="errorNom" textFill="red" />
            </VBox>
            <!-- Statut -->
            <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
               <Label text="Statut" textFill="#82e9f1">
                  <font><Font size="18.0" /></font>
               </Label>
               <HBox spacing="10.0">
                  <ComboBox fx:id="a2" prefWidth="200.0" promptText="statut" style="-fx-background-radius: 5px;">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:value="En cours" />
                           <String fx:value="En pause" />
                           <String fx:value="Terminé" />
                        </FXCollections>
                     </items>
                  </ComboBox>
                  <Button fx:id="listenStatut" onAction="#handleVoiceInputStatut" styleClass="speak-button" text="Speak" />
               </HBox>
               <Label fx:id="errorStatut" textFill="red" />
            </VBox>
            <!-- Priorité -->
            <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
               <Label text="Priorité" textFill="#82e9f1">
                  <font><Font size="18.0" /></font>
               </Label>
               <HBox spacing="10.0">
                  <ComboBox fx:id="a3" prefWidth="200.0" promptText="priorité" style="-fx-background-radius: 5px;">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Haute" />
                           <String fx:value="Moyenne" />
                           <String fx:value="Faible" />
                        </FXCollections>
                     </items>
                  </ComboBox>
                  <Button fx:id="listenPriorite" onAction="#handleVoiceInputPriorite" styleClass="speak-button" text="Speak" />
               </HBox>
               <Label fx:id="errorPriorite" textFill="red" />
            </VBox>
            <!-- Ressource -->
            <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
               <Label text="Ressource" textFill="#82e9f1">
                  <font><Font size="18.0" /></font>
               </Label>
               <HBox spacing="10.0">
                  <TextField fx:id="a5" prefWidth="200.0" promptText="ressource" style="-fx-background-radius: 5px;" />
                  <Button fx:id="listenRessource" onAction="#handleVoiceInputRessource" styleClass="speak-button" text="Speak" />
               </HBox>
               <Label fx:id="errorRessource" textFill="red" />
            </VBox>




            <!-- Description -->
            <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
               <Label text="Description" textFill="#82e9f1">
                  <font><Font size="18.0" /></font>
               </Label>
               <HBox spacing="10.0">
                  <TextField fx:id="a4" prefWidth="500.0" promptText="description" style="-fx-background-radius: 5px;" />
                  <Button fx:id="listenDescription" onAction="#handleVoiceInputDescription" styleClass="speak-button" text="Speak" />
               </HBox>
               <Label fx:id="errorDescription" textFill="red" />
            </VBox>
            <HBox alignment="CENTER" spacing="20.0">
               <Button onAction="#ajouterAction" style="-fx-background-color: #3498DB; -fx-background-radius: 15px;" text="Ajouter">
                  <font><Font size="18.0" /></font>
               </Button>
               <Button onAction="#afficher" style="-fx-background-color: #3498DB; -fx-background-radius: 15px;" text="Afficher">
                  <font><Font size="18.0" /></font>
               </Button>
               <Button onAction="#afficherStats" style="-fx-background-color: #3498DB; -fx-background-radius: 15px;" text="Statistiques">
                  <font><Font size="18.0" /></font>
               </Button>
            </HBox>
         </VBox>
      </VBox>
   </HBox>
   <stylesheets>
      <URL value="@/Styles/style.css" />
   </stylesheets>
</AnchorPane>
