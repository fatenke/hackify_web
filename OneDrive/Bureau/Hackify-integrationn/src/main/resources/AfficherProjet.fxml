<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane prefWidth="1182.0" prefHeight="964.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.AfficherProjet">
    <HBox style="-fx-spacing: 20;">
        <VBox minWidth="200">
            <fx:include source="NavBar.fxml"/>
        </VBox>
        <VBox alignment="TOP_CENTER" spacing="30.0" prefWidth="960.0" style="-fx-padding: 20px;">
            <VBox prefHeight="83.0" prefWidth="600.0"
                  style="-fx-background-color: #286371; -fx-padding: 15px; -fx-background-radius: 15px;">
                <Label text="Trouver un projet" textFill="WHITE">
                    <font><Font size="18.0"/></font>
                </Label>
                <TextField fx:id="searchField" promptText="Recherchez un projet..."/>
            </VBox>
            <HBox spacing="20.0" alignment="CENTER_LEFT"
                  style="-fx-background-color: #e1f5fe; -fx-padding: 10px; -fx-background-radius: 10px;">
                <Button text="Tous les projets" onAction="#displayAllProjects"
                        style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8px 16px; -fx-font-size: 13px;" />
                <Button text="Mes projets" onAction="#refreshProjects"
                        style="-fx-background-color: #00796b; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8px 16px; -fx-font-size: 13px;" />
            </HBox>
            <Label text="Projets" textFill="#82e9f1">
                <font><Font size="18.0"/></font>
            </Label>
            <GridPane fx:id="g1" prefWidth="900.0" prefHeight="600.0"
                      style="-fx-padding: 15px; -fx-hgap: 30px; -fx-vgap: 30px;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="300"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" minHeight="10" prefHeight="300"/>
                    <RowConstraints vgrow="SOMETIMES" minHeight="10" prefHeight="300"/>
                </rowConstraints>
                <!-- contenu généré dynamiquement -->
            </GridPane>
        </VBox>
    </HBox>
    <stylesheets>
        <URL value="@/Styles/style.css"/>
    </stylesheets>
</AnchorPane>
