                      style="-fx-background-color: transparent;"/>
            <Label fx:id="labelTotal" text="Total des projets : 0" textFill="#1e0425">
               <font><Font size="16.0"/></font>
            </Label>
            <Button fx:id="btnRetour" text="Retour Ã  l'ajout" onAction="#retourAction"
                    prefWidth="250.0" prefHeight="40.0"
