<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="400.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.UpdateProjet"
            stylesheets="@styles.css">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0" layoutX="50.0" layoutY="50.0">
            <children>
                <Label text="Update Project" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- Champ Nom -->
                <VBox spacing="5.0">
                    <Label text="Name:" />
                    <TextField fx:id="nameField" prefWidth="250.0" />
                    <Label fx:id="errorNom" style="-fx-text-fill: red;" />
                </VBox>

                <!-- ComboBox Statut -->
                <VBox spacing="5.0">
                    <Label text="Status:" />
                    <ComboBox fx:id="statusCombo" prefWidth="250.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="En cours" />
                                <String fx:value="En pause" />
                                <String fx:value="Terminé" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label fx:id="errorStatut" style="-fx-text-fill: red;" />
                </VBox>

                <!-- ComboBox Priorité -->
                <VBox spacing="5.0">
                    <Label text="Priority:" />
                    <ComboBox fx:id="priorityCombo" prefWidth="250.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Haute" />
                                <String fx:value="Moyenne" />
                                <String fx:value="Faible" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label fx:id="errorPriorite" style="-fx-text-fill: red;" />
                </VBox>

                <!-- Champ Description -->
                <VBox spacing="5.0">
                    <Label text="Description:" />
                    <TextField fx:id="descriptionField" prefWidth="250.0" />
                    <Label fx:id="errorDescription" style="-fx-text-fill: red;" />
                </VBox>

                <!-- Champ Ressource -->
                <VBox spacing="5.0">
                    <Label text="Ressource:" />
                    <TextField fx:id="ressourceField" prefWidth="250.0" />
                    <Label fx:id="errorRessource" style="-fx-text-fill: red;" />
                </VBox>

                <!-- Boutons -->
                <HBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="saveButton" text="Save" prefWidth="100.0" styleClass="save-button" />
                    <Button fx:id="cancelButton" text="Cancel" prefWidth="100.0" styleClass="cancel-button" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>