<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="679.0" prefWidth="635.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AjouterTechnologie">
    <HBox style="-fx-spacing: 20;">
        <!-- NavBar -->
        <VBox minWidth="200">
            <fx:include source="NavBar.fxml" />
        </VBox>

        <!-- Contenu principal avec TabPane -->
        <VBox alignment="TOP_CENTER"  prefWidth="960.0" spacing="30.0" style="-fx-padding: 20px;">

            <TabPane fx:id="tabPane" prefWidth="829.0">
                <!-- Onglet Ajout -->
                <Tab text="Ajouter">
                    <ScrollPane fitToWidth="true">
                        <content>
                            <VBox prefWidth="700.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 20px;">
                                <!-- Nom -->
                                <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
                                    <Label text="Nom" textFill="#82e9f1"><font><Font size="18.0" /></font></Label>
                                    <TextField fx:id="t1" prefWidth="400.0" promptText="nom" style="-fx-background-radius: 5px;" />
                                    <Label fx:id="errorNom" textFill="red" />
                                </VBox>

                                <!-- Type -->
                                <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
                                    <Label text="Type" textFill="#82e9f1"><font><Font size="18.0" /></font></Label>
                                    <ComboBox fx:id="t2" prefWidth="400.0" promptText="Type">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="dev" />
                                                <String fx:value="business" />
                                                <String fx:value="finance" />
                                                <String fx:value="sécurité" />
                                                <String fx:value="réseau" />
                                                <String fx:value="autre" />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    <Label fx:id="errorType" textFill="red" />
                                </VBox>

                                <!-- Complexité -->
                                <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
                                    <Label text="Complexité" textFill="#82e9f1"><font><Font size="18.0" /></font></Label>
                                    <ComboBox fx:id="t3" prefWidth="400.0" promptText="Complexité">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Haute" />
                                                <String fx:value="Moyenne" />
                                                <String fx:value="Faible" />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    <Label fx:id="errorComplexite" textFill="red" />
                                </VBox>

                                <!-- Compatibilité -->
                                <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
                                    <Label text="Compatibilité" textFill="#82e9f1"><font><Font size="18.0" /></font></Label>
                                    <ComboBox fx:id="t4" prefWidth="400.0" promptText="Compatibilité">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Windows" />
                                                <String fx:value="Linux" />
                                                <String fx:value="macOS" />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    <Label fx:id="errorCompatibilite" textFill="red" />
                                </VBox>

                                <!-- Documentaire -->
                                <VBox spacing="10.0" style="-fx-background-color: #1e0425; -fx-padding: 15px; -fx-background-radius: 10px;">
                                    <Label text="Documentaire" textFill="#82e9f1"><font><Font size="18.0" /></font></Label>
                                    <TextField fx:id="t5" prefWidth="400.0" promptText="URL documentaire" />
                                    <Label fx:id="errorDoc" textFill="red" />
                                </VBox>

                                <!-- Bouton Ajouter -->
                                <HBox alignment="CENTER" spacing="20.0" style="-fx-padding:20 0 0 0;">
                                    <Button onAction="#ajouterAction" style="-fx-background-color:#3498DB; -fx-background-radius:15px;" text="Ajouter">
                                        <font><Font size="18.0" /></font>
                                    </Button>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </Tab>

                <!-- Onglet Afficher -->
                <Tab text="Afficher">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <HBox spacing="10.0">
                            <TextField fx:id="searchFieldTech" prefWidth="200" promptText="Rechercher..." />
                            <Button fx:id="searchButtonTech" text="OK" />
                        </HBox>
                        <GridPane fx:id="gridTech" hgap="20" vgap="20" />
                        <Button onAction="#refreshTechnologies" text="Rafraîchir les technologies" />
                    </VBox>
                </Tab>

                <!-- Onglet Statistiques -->
                <Tab text="Statistiques">
                    <VBox spacing="20" style="-fx-padding: 20;">
                        <AnchorPane fx:id="chartContainer" prefHeight="300" prefWidth="600" />
                        <TableView fx:id="statsTable" prefHeight="200" prefWidth="600">
                            <columns>
                                <TableColumn fx:id="compatibilityColumn" text="Compatibilité" />
                                <TableColumn fx:id="countColumn" text="Nombre" />
                            </columns>
                        </TableView>
                        <Button onAction="#refreshStats" text="Rafraîchir les statistiques" />
                    </VBox>
                </Tab>
            </TabPane>
            <Label text="Gestion des Technologies" textFill="#1e0425">
                <font><Font size="36.0" /></font>
            </Label>
        </VBox>
    </HBox>
    <stylesheets>
        <URL value="@/Styles/style.css" />
    </stylesheets>
</AnchorPane>
