<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UpdateTechnologie" stylesheets="@styles.css">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0" layoutX="50.0" layoutY="50.0">
            <children>
                <Label text="Update Technology" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <VBox spacing="5.0">
                    <Label text="Nom:" />
                    <TextField fx:id="nomField" prefWidth="250.0" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Type:" />
                    <TextField fx:id="typeField" prefWidth="250.0" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Complexité:" />
                    <ComboBox fx:id="complexiteCombo" prefWidth="250.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Haute" />
                                <String fx:value="Moyenne" />
                                <String fx:value="Faible" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Documentaire:" />
                    <TextField fx:id="documentaireField" prefWidth="250.0" prefHeight="50.0" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Compatibilité:" />
                    <ComboBox fx:id="compatibiliteCombo" prefWidth="250.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Windows" />
                                <String fx:value="Linux" />
                                <String fx:value="macOS" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <HBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="saveButton" text="Save" prefWidth="100.0" styleClass="save-button" />
                    <Button fx:id="cancelButton" text="Cancel" prefWidth="100.0" styleClass="cancel-button" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>