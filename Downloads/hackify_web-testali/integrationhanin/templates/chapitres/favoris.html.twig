{% extends 'base.html.twig' %}

{% block title %}Mes chapitres favoris{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">❤️ Mes chapitres favoris</h1>

    {% if chapitres is not empty %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Format</th>
                    <th>URL</th>
                    <th>Ressource liée</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for chapitre in chapitres %}
                    <tr>
                        <td>{{ chapitre.id }}</td>
                        <td>{{ chapitre.titre }}</td>
                        <td>{{ chapitre.formatFichier }}</td>
                        <td><a href="{{ chapitre.urlFichier }}" target="_blank">Lien</a></td>
                        <td>{{ chapitre.idRessources.titre }}</td>
                        <td>
                            <a href="{{ path('app_chapitres_show', {'id': chapitre.id}) }}" class="btn btn-sm btn-primary">👁️ Voir</a>
                            <a href="{{ path('chapitre_toggle_favori', {'id': chapitre.id}) }}" class="btn btn-sm btn-danger">🗑️ Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="alert alert-info text-center">Aucun chapitre dans vos favoris.</p>
    {% endif %}

    <a href="{{ path('app_chapitres_index') }}" class="btn btn-secondary mt-3">⬅️ Retour à la liste</a>
</div>
{% endblock %}
