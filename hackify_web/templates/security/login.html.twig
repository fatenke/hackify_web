{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-5">
            <div class="card shadow-lg" style="border-radius: 1rem; border: none; background: linear-gradient(to right bottom, #ffffff, #f8f9fa);">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold mb-3" style="color: #1b3347;">Connexion</h2>
                        <p class="text-muted">Bienvenue sur notre plateforme</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        </div>
                    {% endif %}

                    {% if validation_errors is defined and validation_errors is not empty %}
                        <div class="alert alert-danger">
                            {% if validation_errors.email is defined %}
                                {% for error in validation_errors.email %}
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div>{{ error }}</div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                            {% if validation_errors.password is defined %}
                                {% for error in validation_errors.password %}
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div>{{ error }}</div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="form-group mb-4">
                            <label for="username" class="form-label fw-semibold">Email</label>
                            <div class="input-group input-group-lg shadow-sm">
                                <span class="input-group-text bg-primary bg-opacity-10 border-end-0">
                                    <i class="bi bi-envelope text-primary"></i>
                                </span>                                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                                    class="form-control border-start-0" 
                                    placeholder="votre.email@exemple.com" 
                                    required autofocus>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label fw-semibold">Mot de passe</label>
                            <div class="input-group input-group-lg shadow-sm">
                                <span class="input-group-text bg-primary bg-opacity-10 border-end-0">
                                    <i class="bi bi-lock text-primary"></i>
                                </span>
                                <input type="password" name="password" id="password" 
                                    class="form-control border-start-0" 
                                    placeholder="Votre mot de passe" 
                                    required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-group mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                                    <label class="form-check-label text-muted" for="remember_me">
                                        Se souvenir de moi
                                    </label>
                                </div>
                                <a href="#" class="text-primary text-decoration-none fw-semibold">Mot de passe oubli√© ?</a>
                            </div>
                        </div>

                        <button class="btn btn-primary btn-lg w-100 mb-4 shadow-sm" type="submit">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                        </button>

                        <div class="text-center">
                            <p class="mb-0 text-muted">Pas encore de compte ? 
                                <a href="{{ path('app_register') }}" class="text-primary fw-semibold text-decoration-none">S'inscrire</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
